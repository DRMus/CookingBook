// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  username  String
  password  String
  likes     String
  created_recipes Recipe[]
  created_at DateTime
}

model Recipe {
  id      Int @id @default(autoincrement())
  user    User? @relation(fields: [userId], references: [id])
  userId  Int?
  likes   Int
  description String?
  cooking_order String
  difficulty Int
  ingredients String
  image String?
  created_at DateTime
}

model Ingredient {
  id Int @id @default(autoincrement())
  name String
}

model AlternateIngredient {
  id Int @id @default(autoincrement())
  ingredient_id Int
  alternate_ingredient_id Int
}
